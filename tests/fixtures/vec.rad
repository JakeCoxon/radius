import compiler for assert, static_length

type vec2i < VecType @struct:
  x: int
  y: int

type vec3i < VecType @struct:
  x: int
  y: int
  z: int

type vec2 < VecType @struct:
  x: float
  y: float

type vec3 < VecType @struct:
  x: float
  y: float
  z: float

fn magnitude!(T)(vec: T) -> float:
  let magnitude = 0.0
  meta let index = 0
  meta while index < static_length(vec):
    magnitude += vec.[index]
    meta index = index + 1
  magnitude

fn main():
  let v1 = vec2i(1, 2)
  let v2 = vec2i(3, 4)
  let v3 = v1 + v2
  let v4 = v2 - v1
  let v5 = (v2 * v1) / (v1 + v2)

  let v6 = v5 * 2
  let v7 = 3 * v5

  let v10 = vec3i(1, 3, 5)
  let v11 = vec3i(7, 9, 11)
  let v12 = v10 + v11

  v1 += vec2i(10, 10)
  v1 += (10, 20)

  let v20 = vec2(2.3, 5.6) * 2.3
  let v21 = 7.5 * vec2(3, 5.6)

  assert(v20.x == 5.29)
  assert(v21.y == 42)

  assert((100 / vec2i(10, 10)).x == 10)

  let v30 = vec3(1, 2, 3)
  const foo = 3 + 2 + 1 - 4 - 2
  assert(v30.[foo] == 1)

  assert(int(magnitude(v20)) == 18)
  assert(magnitude(v30) == 6)